@model BusinessLogic.ModelsForControllers.LoginViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Вход</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <style>




        .nowrap {
            white-space: nowrap
        }

        .transition {
            transition: all 300ms ease-out;
        }

        .hover {
            color: #0b61fe;
        }
    </style>
</head>
<body>
    <nav id="nav" class="navbar navbar-expand-lg  navbar-dark bg-dark fixed-top ">
        <button class="navbar-toggler ml-auto" id="nav-button" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse  justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav ml-sm-2">
                <li class="nav-item ">
                    <a class="nav-link flex-nowrap nowrap text-right" asp-action="Index" asp-controller="Home">О Проекте<span class="sr-only"></span></a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link flex-nowrap nowrap text-right" asp-action="Login" asp-controller="Account">Войти<span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link flex-nowrap nowrap text-right" asp-action="Register" asp-controller="Account">Зарегестрироваться<span class="sr-only"></span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-sm p-4 " style="max-width: 40em; margin-top: 50px">

        <h1 class="title  mb-5 mt-3">Войти</h1>
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Login">Введите ник</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <svg class="bi bi-at" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M13.106 7.222c0-2.967-2.249-5.032-5.482-5.032-3.35 0-5.646 2.318-5.646 5.702 0 3.493 2.235 5.708 5.762 5.708.862 0 1.689-.123 2.304-.335v-.862c-.43.199-1.354.328-2.29.328-2.926 0-4.813-1.88-4.813-4.798 0-2.844 1.921-4.881 4.594-4.881 2.735 0 4.608 1.688 4.608 4.156 0 1.682-.554 2.769-1.416 2.769-.492 0-.772-.28-.772-.76V5.206H8.923v.834h-.11c-.266-.595-.881-.964-1.6-.964-1.4 0-2.378 1.162-2.378 2.823 0 1.737.957 2.906 2.379 2.906.8 0 1.415-.39 1.709-1.087h.11c.081.67.703 1.148 1.503 1.148 1.572 0 2.57-1.415 2.57-3.643zm-7.177.704c0-1.197.54-1.907 1.456-1.907.93 0 1.524.738 1.524 1.907S8.308 9.84 7.371 9.84c-.895 0-1.442-.725-1.442-1.914z" clip-rule="evenodd" />
                            </svg>
                        </span>
                    </div>
                    <input type="text" asp-for="Login" class="form-control" placeholder="somebody" aria-label="somebody"
                           aria-describedby="basic-addon1">
                </div>
                <small> <span class="form-text text-muted" asp-validation-for="Login"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <svg class="bi bi-lock" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M11.5 8h-7a1 1 0 00-1 1v5a1 1 0 001 1h7a1 1 0 001-1V9a1 1 0 00-1-1zm-7-1a2 2 0 00-2 2v5a2 2 0 002 2h7a2 2 0 002-2V9a2 2 0 00-2-2h-7zm0-3a3.5 3.5 0 117 0v3h-1V4a2.5 2.5 0 00-5 0v3h-1V4z" clip-rule="evenodd" />
                            </svg>
                        </span>
                    </div>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password123" aria-label="somebody"
                           aria-describedby="basic-addon1">
                </div>
                <small> <span class="form-text text-muted" asp-validation-for="Password"></span></small>
            </div>
            <div class="radio-group transition">
                <label class="radio transition" asp-for="RememberMe">
                    Запоминать?
                </label><br />
                <input asp-for="RememberMe" hidden />
            </div>
            <button type="submit" class="container-fluid btn btn-primary mt-2">Войти</button>
        </form>
        <h1 class="title  mb-5 mt-3">Войти через</h1>
        @{
            if (Model.ExternalLogins.Count == 0)
            {
                <div>У вас нет внешних провайдеров</div>
            }
            else
            {
                <form asp-action="ExternalLogin" asp-controller="Account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <div>
                        @{
                            foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name">
                                    @provider.DisplayName
                                </button>
                            }
                        }
                    </div>
                </form>
            }
        }
    </div>
 

    <script>$('.radio-group .radio').click(function () {
            if ($(this).hasClass("selected")) {
                $(this).removeClass("selected");
                let icon = '<svg class="bi bi-x-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M14 1H2a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V2a1 1 0 00-1-1zM2 0a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V2a2 2 0 00-2-2H2z" clip-rule="evenodd" /><path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z" clip-rule="evenodd" /><path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z" clip-rule="evenodd" /></svg>';
                $(this).fadeTo("slow", 0, function () {
                    $(this).text("Не запоминать")
                }).fadeTo("slow", 1);
            }
            else {
                $(this).addClass("selected");
                let icon = '<svg class="bi bi-check-box" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">< path fill-rule="evenodd" d = "M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z" clip - rule="evenodd" /><path fill-rule="evenodd" d="M1.5 13A1.5 1.5 0 003 14.5h10a1.5 1.5 0 001.5-1.5V8a.5.5 0 00-1 0v5a.5.5 0 01-.5.5H3a.5.5 0 01-.5-.5V3a.5.5 0 01.5-.5h8a.5.5 0 000-1H3A1.5 1.5 0 001.5 3v10z" clip-rule="evenodd" /></svg >';
                $(this).fadeTo("slow", 0, function () {
                    $(this).text("Запомнить")
                }).fadeTo("slow", 1);
            }
        }).hover(
            function () {
                $(this).addClass('hover')
            },
            function () {
                $(this).removeClass('hover')
            }
        );</script>
</body>
</html>