@model BusinessLogic.ModelsForControllers.CreateOrderViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Оформление заказа</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <style>
        .nowrap {
            white-space: nowrap
        }

        .transition {
            transition: all 300ms ease-out;
        }

        .subscribe {
            display: block;
            transition: all 300ms ease-out;
        }
    </style>
</head>
<body>
    <nav id="nav" class="navbar navbar-expand-lg  navbar-dark bg-dark fixed-top ">
        <div class="row  row-cols-2  ml-md-0 mr-md-0 mb-1 mt-1 align-content-stretch d-flex transition flex-fill ">
            <div class="col-auto mr-0 pl-sm-2 pr-sm-0 align-content-stretch transition">
                <button type="button"
                        class="flex-fill btn btn-outline-light mr-sm-0 pl-sm-4 pr-sm-4 pb-auto mb-sm-0  font-weight-light  subscribe">
                    Подписаться
                </button>
            </div>
            <div class="mr-sm-3 ml-sm-3"></div>
        </div>
        <button class="navbar-toggler ml-auto" id="nav-button" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse  justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav ml-sm-2">
                <li class="nav-item ">
                    <a class="nav-link flex-nowrap nowrap text-right" href="#">О Проекте<span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link flex-nowrap nowrap text-right" href="#">Мои заказы<span class="sr-only"></span></a>
                </li>

                <li class="nav-item ">
                    <a class="nav-link flex-nowrap nowrap text-right " href="#">Мой профиль<span class="sr-only"></span></a>
                </li>
            </ul>
        </div>

    </nav>
    <div class="container-sm p-4 " style="max-width: 40em; margin-top: 50px">
        <h1 class="title  mb-5 mt-3">Оформление заказа</h1>
        <form>
            <div class="d-flex justify-content-between mb-sm-3">
                <div class=" flex-fill">
                    <div class="form-group-sm">
                        <select required class="form-control" asp-for="LocationFrom" id="exampleFormControlSelect1">
                            @foreach(var location in Model.LocationsFrom)
                            {
                                <option>@location</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="ml-sm-3 mr-sm-4">
                    <svg class="bi bi-arrow-right" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M10.146 4.646a.5.5 0 01.708 0l3 3a.5.5 0 010 .708l-3 3a.5.5 0 01-.708-.708L12.793 8l-2.647-2.646a.5.5 0 010-.708z"
                              clip-rule="evenodd" />
                        <path fill-rule="evenodd" d="M2 8a.5.5 0 01.5-.5H13a.5.5 0 010 1H2.5A.5.5 0 012 8z"
                              clip-rule="evenodd" />
                    </svg>
                </div>
                <div class=" flex-fill">
                    <div class="form-group-sm">
                        <select required class="form-control" asp-for="LocationTo" id="exampleFormControlSelect1">
                            @foreach (var location in Model.LocationsTo)
                            {
                                <option>@location</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group-sm mt-3 mb-3">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <svg class="bi bi-clock" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm8-7A8 8 0 110 8a8 8 0 0116 0z" clip-rule="evenodd" />
                                <path fill-rule="evenodd"
                                      d="M7.5 3a.5.5 0 01.5.5v5.21l3.248 1.856a.5.5 0 01-.496.868l-3.5-2A.5.5 0 017 9V3.5a.5.5 0 01.5-.5z"
                                      clip-rule="evenodd" />
                            </svg>
                        </span>
                    </div>
                    <input type="text" asp-for="Time" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                           placeholder="13:20" pattern="\d\d:\d\d">
                    <p>
                        <small id="emailHelp" class="form-text text-muted">
                            Если вы укажите время раньше текущего, заказ будет
                            оформлен на следующий день
                        </small>
                    </p>
                </div>
            </div>
            <label>Количество пассажиров:</label>
            <div class="radio-group d-flex flex-fill pl-3 pr-3 row row-cols-3 mt-3 mb-4">
                <div class="col-auto radio " data-value="1">
                    <svg class="bi bi-person-fill  transition" width="1em" height="1em" viewBox="0 0 16 16"
                         fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                              clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="col-auto pl-5  mx-auto radio " data-value="2">
                    <svg class="bi bi-person-fill  transition" width="1em" height="1em" viewBox="0 0 16 16"
                         fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                              clip-rule="evenodd" />
                    </svg>
                    <svg class="bi bi-person-fill  transition" width="1em" height="1em" viewBox="0 0 16 16"
                         fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                              clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="col-auto mr-0 radio " data-value="3">
                    <svg class="bi bi-person-fill  transition" width="1em" height="1em" viewBox="0 0 16 16"
                         fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                              clip-rule="evenodd" />
                    </svg>
                    <svg class="bi bi-person-fill  transition" width="1em" height="1em" viewBox="0 0 16 16"
                         fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                              clip-rule="evenodd" />
                    </svg>
                    <svg class="bi bi-person-fill transition" width="1em" height="1em" viewBox="0 0 16 16"
                         fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z"
                              clip-rule="evenodd" />
                    </svg>
                </div>
                <input hidden type="text" asp-for="CountOfPeople" required id="radio-value" name="radio-value" />
            </div>
            <button type="submit" class="btn btn-primary container-fluid mt-3 p-2">Оформить</button>
        </form>
        <div id="spinner" class="text-center mt-3 ">
            <div class="spinner-border text-primary   text-center" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
        <iframe id="iframe" class="p-0 mt-3 "
                src="https://yandex.ru/map-widget/v1/?um=constructor%3A97965eab362949c9553f8d3fa17ac47db489a98952cdf5fe45ccf420f0888d6c&amp;source=constructor"
                width="100%" height="500" frameborder="0" style="display: none; opacity: 0" align="center">
        </iframe>
    </div>

    <script>$(".subscribe").hover(
        function () {
            $(this).removeClass('pr-sm-4 pl-sm-4');
            $(this).addClass('pr-sm-5 pl-sm-5')
        },
        function () {
            $(this).removeClass('pr-sm-5 pl-sm-5');
            $(this).addClass('pr-sm-4 pl-sm-4');
        }
    );

    $("#iframe").load(function () {
        $("#spinner").fadeOut(600);
        $(this).show(600);
        $(this).fadeTo( 600 , 1);
    });

    $("#nav-button").click(function () {
        $(".find").parent().toggleClass("d-flex flex-fill");
        $(".subscribe").parent().toggleClass("d-flex flex-fill");
        $(".find").parent().parent().toggleClass("mr-sm-0");
    });
    $('.radio-group .radio').click(function () {
        $(this).parent().find('.radio').children().attr("width", "1em");
        $(this).parent().find('.radio').children().attr("height", "1em");
        $(this).parent().find('.radio').children().attr("fill", "currentColor");
        $(this).parent().find('.radio').removeClass("selected");
        $(this).children().attr('width', "1.4em");
        $(this).children().attr('height', "1.4em");
        $(this).children().attr("fill", "#0069d9");
        $(this).addClass("selected");
        var val = $(this).attr('data-value');
        $(this).parent().parent().find('#radio-value').val(val);
    });
    $('.radio-group .radio').hover(
        function () {
            if (!$(this).hasClass("selected"))
                $(this).children().attr("fill", "#017cff");
        },
        function () {
            if (!$(this).hasClass("selected"))
                $(this).children().attr("fill", "currentColor");
        }
    );</script>
</body>
</html>
