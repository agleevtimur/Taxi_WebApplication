@model Taxi.ViewModels.Subscription.GetSubscriptionViewModel
!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Оформление подписки</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <style>

        .nowrap {
            white-space: nowrap
        }

        .find {
            display: block;
            transition: all 300ms ease-out;
        }

        .transition {
            transition: all 300ms ease-out;
        }

        .radio-group {
            position: relative;
        }

        .card {
            transition: all 300ms ease-out;
            color: black;
        }

            .card p em {
                font-size: x-small;
            }

        .radio {
            display: inline-block;
        }

        .high {
            border-color: #6f42c1;
        }

            .high h4 {
                color: #6f42c1;
            }

        .medium {
            border-color: #feb50d;
        }

            .medium h4 {
                color: #feb50d;
            }

        .radio.selected {
            border-color: blue;
        }

        .hover-high {
            border-color: #5a28b3;
            -moz-box-shadow: 0 0 4px #5a28b3;
            -webkit-box-shadow: 0 0 4px #5a28b3;
            box-shadow: 0 0 4px #5a28b3;
        }

        .hover-input {
            transition: all 300ms ease-out;
            border-color: #0b61fe;
            -moz-box-shadow: 0 0 6px #0b61fe;
            -webkit-box-shadow: 0 0 6px #0b61fe;
            box-shadow: 0 0 6px #0b61fe;
        }

        .hover-medium {
            border-color: #feb50d;
            -moz-box-shadow: 0 0 4px #feb50d;
            -webkit-box-shadow: 0 0 4px #feb50d;
            box-shadow: 0 0 4px #feb50d;
        }

        .high.selected {
            border-color: #5a28b3;
            -moz-box-shadow: 0 0 15px #5a28b3;
            -webkit-box-shadow: 0 0 15px #5a28b3;
            box-shadow: 0 0 15px #5a28b3;
        }

        .medium.selected {
            border-color: #feb50d;
            -moz-box-shadow: 0 0 15px #feb50d;
            -webkit-box-shadow: 0 0 15px #feb50d;
            box-shadow: 0 0 15px #feb50d;
        }
    </style>
</head>
<body>
    <nav id="nav" class="navbar navbar-expand-lg  navbar-dark bg-dark fixed-top ">
        <div class="row  row-cols-2  ml-md-0 mr-md-0 mb-1 mt-1 align-content-stretch d-flex  flex-fill ">
            <div class="col-auto  pl-md-0 pr-sm-2  align-content-center pb-0 transition">
                <form asp-action="Create" asp-controller="Order" method="post" asp-route-id="@Model.Id">
                    <button type="submit"
                            class="flex-fill btn btn-primary  pr-sm-4 pl-sm-4 pb-auto mb-0 font-weight-bold text-center find">
                        Найти попутчиков
                    </button>
                </form>
            </div>
            <div class="col-auto mr-0 pl-sm-2 pr-sm-0 align-content-stretch transition">
                <form asp-action="Subscription" asp-controller="Users" method="post" asp-route-id="@Model.Id">
                    <button type="submit"
                            class="flex-fill btn btn-outline-light mr-sm-0 pl-sm-4 pr-sm-4 pb-auto mb-sm-0  font-weight-light  subscribe">
                        Подписаться
                    </button>
                </form>
            </div>
            <div class="mr-sm-3 ml-sm-3"></div>
        </div>
        <button class="navbar-toggler ml-auto" id="nav-button" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse  justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav ml-sm-2">
                    <li class="nav-item ">
                        <a class="nav-link flex-nowrap nowrap text-right" asp-action="Index" asp-controller="Home">О Проекте<span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link flex-nowrap nowrap text-right" asp-action="Index" asp-controller="Order" asp-route-id="@Model.Id">Заказы<span class="sr-only"></span></a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link flex-nowrap nowrap text-right" asp-action="Index" asp-controller="Users" asp-route-id="@Model.Id">Мой профиль<span class="sr-only"></span></a>
                    </li>
                </ul>
        </div>
        <div class="col-auto  pl-md-0 pr-sm-2  align-content-center pb-0 transition">
            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit"
                        class="flex-fill btn btn-primary  pr-sm-4 pl-sm-4 pb-auto mb-0 font-weight-bold text-center find">
                    Выход
                </button>
            </form>
        </div>
    </nav>
    <div class="container-sm p-4 " style="max-width: 45em; margin-top: 50px">
        <form asp-action="GetSubscription" asp-controller="Users" method="post">
            <input asp-for="Id" value="@Model.Id" hidden />
            <div asp-validation-summary="ModelOnly"></div>
            <div class="radio-group">
                <div class="row  row-cols-sm-3  mt-sm-4 mb-sm-4 pr-0">
                    <input hidden class="chk" type="radio" value="0" id="0" asp-for="CardNumber" />
                    <input hidden class="chk" type="radio" value="1" id="1" asp-for="CardNumber" />
                    <input hidden class="chk" type="radio" value="2" id="2" asp-for="CardNumber" />
                    <input hidden class="chk" type="radio" value="3" id="3" asp-for="CardNumber" />
                    <input hidden class="chk" type="radio" value="4" id="4" asp-for="CardNumber" />
                    <input hidden class="chk" type="radio" value="5" id="5" asp-for="CardNumber" />
                    <div class=" d-flex col-sm mb-4">
                        <div class=" card radio mx-auto high" data-value="0">
                            <div class="card-body ">
                                <h4 class="card-title">High 30</h4>
                                <p class="card-text m-1"><em>30 заказов с высоким приоритетом</em></p>
                                <p class="card-text"><small class="text-muted">99₽</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-sm  mb-4">
                        <div class="card mx-auto mx-auto radio high" data-value="1">
                            <div class="card-body ">
                                <h4 class="card-title">High 50</h4>
                                <p class="card-text m-1"><em>50 заказов с высоким приоритетом</em></p>
                                <p class="card-text"><small class="text-muted">149₽</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-sm mb-4">
                        <div class="card radio mx-auto high" data-value="2">
                            <div class="card-body ">
                                <h4 class="card-title">High 100</h4>
                                <p class="card-text m-1"><em>30 заказов с высоким приоритетом</em></p>
                                <p class="card-text"><small class="text-muted">249₽</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-sm mb-4">
                        <div class="card radio mx-auto medium" data-value="3">
                            <div class="card-body">
                                <h4 class="card-title">Medium 30</h4>
                                <p class="card-text m-1"><em>30 заказов со средним приоритетом</em></p>
                                <p class="card-text"><small class="text-muted">59₽</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-sm  mb-4">
                        <div class="card radio mx-auto medium" data-value="4">
                            <div class="card-body ">
                                <h4 class="card-title">Medium 50</h4>
                                <p class="card-text m-1"><em>50 заказов со средним приоритетом</em></p>
                                <p class="card-text"><small class="text-muted">99₽</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-sm  mb-4">
                        <div class="card radio mx-auto medium" data-value="5">
                            <div class="card-body">
                                <h4 class="card-title">Medium 100</h4>
                                <p class="card-text m-1"><em>100 заказов сосредним приоритетом</em></p>
                                <p class="card-text"><small class="text-muted">159₽</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="form-text">Данные карты</h3>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">
                        <svg class="bi bi-card-heading" width="1em"
                             height="1em" viewBox="0 0 16 16"
                             fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M14.5 3h-13a.5.5 0 00-.5.5v9a.5.5 0 00.5.5h13a.5.5 0 00.5-.5v-9a.5.5 0 00-.5-.5zm-13-1A1.5 1.5 0 000 3.5v9A1.5 1.5 0 001.5 14h13a1.5 1.5 0 001.5-1.5v-9A1.5 1.5 0 0014.5 2h-13z"
                                  clip-rule="evenodd" />
                            <path fill-rule="evenodd"
                                  d="M3 8.5a.5.5 0 01.5-.5h9a.5.5 0 010 1h-9a.5.5 0 01-.5-.5zm0 2a.5.5 0 01.5-.5h6a.5.5 0 010 1h-6a.5.5 0 01-.5-.5z"
                                  clip-rule="evenodd" />
                            <path d="M3 5.5a.5.5 0 01.5-.5h9a.5.5 0 01.5.5v1a.5.5 0 01-.5.5h-9a.5.5 0 01-.5-.5v-1z" />
                        </svg>
                    </span>
                </div>
                <input type="text" class="form-control" placeholder="1234 1234 1234 1234" aria-describedby="basic-addon1" asp-for="@Model.NameOfCard">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <svg class="bi bi-clock-history" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M8.515 1.019A7 7 0 008 1V0a8 8 0 01.589.022l-.074.997zm2.004.45a7.003 7.003 0 00-.985-.299l.219-.976c.383.086.76.2 1.126.342l-.36.933zm1.37.71a7.01 7.01 0 00-.439-.27l.493-.87a8.025 8.025 0 01.979.654l-.615.789a6.996 6.996 0 00-.418-.302zm1.834 1.79a6.99 6.99 0 00-.653-.796l.724-.69c.27.285.52.59.747.91l-.818.576zm.744 1.352a7.08 7.08 0 00-.214-.468l.893-.45a7.976 7.976 0 01.45 1.088l-.95.313a7.023 7.023 0 00-.179-.483zm.53 2.507a6.991 6.991 0 00-.1-1.025l.985-.17c.067.386.106.778.116 1.17l-1 .025zm-.131 1.538c.033-.17.06-.339.081-.51l.993.123a7.957 7.957 0 01-.23 1.155l-.964-.267c.046-.165.086-.332.12-.501zm-.952 2.379c.184-.29.346-.594.486-.908l.914.405c-.16.36-.345.706-.555 1.038l-.845-.535zm-.964 1.205c.122-.122.239-.248.35-.378l.758.653a8.073 8.073 0 01-.401.432l-.707-.707z"
                                  clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M8 1a7 7 0 104.95 11.95l.707.707A8.001 8.001 0 118 0v1z" clip-rule="evenodd" />
                            <path fill-rule="evenodd"
                                  d="M7.5 3a.5.5 0 01.5.5v5.21l3.248 1.856a.5.5 0 01-.496.868l-3.5-2A.5.5 0 017 9V3.5a.5.5 0 01.5-.5z"
                                  clip-rule="evenodd" />
                        </svg>
                    </span>
                </div>
                <input type="text" aria-label="date" placeholder="ММ/ГГ" class="form-control text-left" asp-for="@Model.ExpiryTime">
                <input type="text" aria-label="code" placeholder="123" class="form-control  text-right" asp-for="@Model.SecretCode">
                <div class="input-group-append">
                    <span class="input-group-text">CVV</span>
                </div>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <svg class="bi bi-person" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 00.014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 00.022.004zm9.974.056v-.002.002zM8 7a2 2 0 100-4 2 2 0 000 4zm3-2a3 3 0 11-6 0 3 3 0 016 0z"
                                  clip-rule="evenodd" />
                        </svg>
                    </span>
                </div>
                <input type="text" aria-label="firstname" placeholder="Иванов" class="form-control text-left" asp-for="@Model.FirstName">
                <input type="text" aria-label="lastname" placeholder="Иван" class="form-control  text-left" asp-for="@Model.SecondName">
            </div>
            <button type="submit" class="btn btn-primary container-fluid mt-3 p-2">Оформить</button>
        </form>
    </div>

    <script>
        $('.medium ').hover(
            function () {
                $(this).addClass('hover-medium')
            },
            function () {
                $(this).removeClass('hover-medium')
            }
        );
        $('.input-group').hover(
            function () {
                $(this).addClass('hover-input')
            },
            function () {
                $(this).removeClass('hover-input')
            }
        );
        $('.high ').hover(
            function () {
                $(this).addClass('hover-high')
            },
            function () {
                $(this).removeClass('hover-high')
            }
        );
        $('.radio-group .radio').click(function () {
            $(this).parent().parent().find('.radio').removeClass('selected');
            $(this).parent().parent().parent().find('.chk').prop('checked', false);
            $(this).addClass('selected');
            let val = $(this).attr('data-value');
            $(this).addClass('selected');
            $(this).parent().parent().find('#' + val).prop('checked', true);
        });
        $(".find").hover(
            function () {
                $(".subscribe").removeClass('pr-sm-4 pl-sm-4');
                $(this).removeClass('pr-sm-4 pl-sm-4');
                $(".subscribe").addClass('pr-sm-2 pl-sm-2');
                $(this).addClass('pr-sm-5 pl-sm-5')
            },
            function () {
                $(".subscribe").removeClass('pr-sm-2 pl-sm-2');
                $(this).removeClass('pr-sm-5 pl-sm-5');
                $(".subscribe").addClass('pr-sm-4 pl-sm-4');
                $(this).addClass('pr-sm-4 pl-sm-4');
            }
        );
        $("#nav-button").click(function () {
            $(".find").parent().toggleClass("d-flex flex-fill");
            $(".subscribe").parent().toggleClass("d-flex flex-fill");
            $(".find").parent().parent().toggleClass("mr-sm-0");
        });
    </script>
</body>
</html>